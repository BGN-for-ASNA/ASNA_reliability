   issn = {0003-3472},
   issue = {4},
   journal = {Animal Behaviour},
   keywords = {African elephant,between-group competition,nepotism,resource distribution,socioecology,transitive dominance,within-group competition},
   pages = {671-681},
   title = {Hierarchical dominance structure and social organization in African elephants, Loxodonta africana},
   volume = {73},
   url = {http://www.sciencedirect.com/science/article/pii/S000334720700022X},
