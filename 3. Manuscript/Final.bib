}
@article{Seyfarth1977,
   abstract = {Grooming networks among adult female monkeys exhibit two similar features across a number of different species. High-ranking animals receive more grooming than others, and the majority of grooming occurs between females of adjacent rank. A theoretical model which duplicates these features is presented, and the properties of the model are used to explain the possible causation and function of female grooming behaviour. The model illustrates how relatively simple principles governing the behaviour of individuals may be used to explain more complex aspects of the social structure of non-human primate groups. © 1977.},
