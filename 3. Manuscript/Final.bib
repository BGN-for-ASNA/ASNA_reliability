   title = {Serotonin transporter (SERT) polymorphisms, personality and problem-solving in urban great tits},
   volume = {11},
   year = {2021},
}
@article{Bakker1986,
   abstract = {Provides an analysis of the variation of aggressiveness in the base population, composed of individually isolated progeny of wild-caught parents. Aggressiveness is highly variable across individuals. Phenotypic variation is to a considerable extent attributable to genotypic variation in each situation. The genetic influence on variation of aggressiveness is analysed with the aid of selection experiments. Bidirectional selection is exerted upon juvenile aggressiveness in juveniles of both sexes (juvenile aggression lines), upon territorial aggressiveness in males and female aggressiveness in adult females (territorial aggression lines), and lastly, upon dominance ability in males (dominance lines).-from Author},
