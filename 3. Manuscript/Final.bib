   issue = {1},
   journal = {Methods in Ecology and Evolution},
   keywords = {animal social networks,hypothesis testing,permutation tests,social behaviour,social network analysis},
   month = {1},
   pages = {144-156},
   publisher = {John Wiley & Sons, Ltd},
   title = {Permutation tests for hypothesis testing with animal social network data: Problems and potential solutions},
   volume = {13},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1111/2041-210X.13741 https://onlinelibrary.wiley.com/doi/abs/10.1111/2041-210X.13741 https://besjournals.onlinelibrary.wiley.com/doi/10.1111/2041-210X.13741},
